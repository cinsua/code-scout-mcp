{
  "name": "@code-scout/mcp-server",
  "version": "0.1.0",
  "description": "Code indexing and semantic search MCP server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "code-scout-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:prod": "NODE_ENV=production node esbuild.config.js",
    "build:dev": "NODE_ENV=development node esbuild.config.js",
    "dev": "nodemon --exec tsx src/index.ts",
    "dev:watch": "node esbuild.config.js --watch",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:performance": "jest --testPathPatterns=performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "pretest": "npm run lint && npm run typecheck",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test-lint": "eslint --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "prebuild": "npm run typecheck",
    "postbuild": "node -e \"console.log('âœ… Build process completed')\"",
    "size": "npm run build && du -sh dist/*"
  },
  "keywords": [
    "mcp",
    "code-search",
    "indexing",
    "semantic-search",
    "typescript",
    "python",
    "javascript"
  ],
  "author": "Code-Scout Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "better-sqlite3": "^11.4.0",
    "chokidar": "^3.5.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/ajv": "^0.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "mock-fs": "^5.5.0",
    "nock": "^14.0.10",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "testcontainers": "^11.9.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
