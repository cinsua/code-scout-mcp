{
  "version": "1.0.0",
  "profile": "development",
  "indexing": {
    "maxFileSize": 52428800,
    "maxWorkers": 2,
    "batchSize": 50,
    "debounceMs": 500,
    "batchWindowMs": 2000,
    "followSymlinks": true,
    "maxDepth": 10,
    "incremental": true
  },
  "search": {
    "defaultLimit": 50,
    "maxLimit": 200,
    "fuzzySearch": true,
    "fuzzyThreshold": 0.6,
    "enableRegex": true,
    "timeoutMs": 10000,
    "scoringWeights": {
      "filename": 4.0,
      "path": 2.5,
      "definitions": 3.5,
      "imports": 2.0,
      "documentation": 1.5,
      "content": 2.0
    }
  },
  "database": {
    "path": "./.code-scout/dev-database.db",
    "type": "sqlite",
    "maxConnections": 5,
    "connectionTimeout": 10000,
    "enableWAL": true,
    "vacuumIntervalHours": 24
  },
  "watching": {
    "enabled": true,
    "ignorePatterns": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "__pycache__",
      "*.pyc",
      ".code-scout",
      "*.log",
      "coverage",
      ".nyc_output"
    ],
    "includePatterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.py",
      "**/*.json",
      "**/*.md"
    ],
    "pollingInterval": 0,
    "recursive": true,
    "debounceMs": 500
  },
  "languages": {
    "typescript": {
      "extensions": [".ts", ".tsx", ".js", ".jsx"],
      "parser": "TypeScriptParser",
      "enabled": true,
      "config": {
        "strict": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
      }
    },
    "javascript": {
      "extensions": [".js", ".jsx"],
      "parser": "JavaScriptParser",
      "enabled": true,
      "config": {
        "esversion": 2022,
        "sourceType": "module"
      }
    },
    "python": {
      "extensions": [".py"],
      "parser": "PythonParser",
      "enabled": true,
      "config": {
        "version": 3,
        "parseDocstrings": true
      }
    }
  },
  "logging": {
    "level": "debug",
    "format": "text",
    "file": {
      "enabled": true,
      "path": "./.code-scout/logs/dev.log",
      "maxSize": "50MB",
      "maxFiles": 5
    },
    "console": {
      "enabled": true,
      "colorize": true
    },
    "structured": false
  },
  "security": {
    "allowedExtensions": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx",
      ".py",
      ".json",
      ".md",
      ".txt",
      ".yml",
      ".yaml"
    ],
    "blockedPatterns": [
      "**/*.pem",
      "**/*.key",
      "**/*.p12",
      "**/.env*",
      "**/secrets/**",
      "**/private/**",
      "**/.ssh/**"
    ],
    "maxPathLength": 1024,
    "enableSandbox": false,
    "sandbox": {
      "timeoutMs": 30000,
      "memoryLimitMB": 512,
      "allowNetworkAccess": true
    }
  },
  "errorHandling": {
    "retryDelays": {
      "immediate": 0,
      "short": 500,
      "medium": 1500,
      "long": 4000,
      "extended": 8000,
      "maximum": 30000
    },
    "timeouts": {
      "database": 15000,
      "parsing": 8000,
      "network": 3000,
      "filesystem": 3000,
      "indexing": 240000,
      "query": 15000,
      "connection": 8000,
      "read": 15000,
      "write": 15000,
      "lock": 3000,
      "default": 8000
    },
    "circuitBreaker": {
      "failureThreshold": 3,
      "recoveryTimeout": 30000,
      "monitoringPeriod": 180000,
      "successThreshold": 2,
      "timeout": 15000
    },
    "degradation": {
      "errorRateThreshold": 0.15,
      "responseTimeThreshold": 3000,
      "memoryUsageThreshold": 0.85,
      "cpuUsageThreshold": 0.95,
      "monitoringInterval": 15000
    },
    "aggregation": {
      "windowMs": 180000,
      "cleanupIntervalMs": 2400000,
      "maxErrorEntries": 5000
    },
    "performance": {
      "slowQueryThresholdMs": 500,
      "verySlowQueryThresholdMs": 3000,
      "connectionAcquisitionThresholdMs": 500,
      "memoryUsageBytes": 2147483648,
      "poolUtilizationThreshold": 0.85
    },
    "resource": {
      "maxAgeMs": 2400000,
      "idleTimeoutMs": 240000,
      "cleanupIntervalMs": 45000,
      "leakThresholdAgeMs": 1200000
    },
    "retryHandler": {
      "baseDelay": 500,
      "maxDelay": 20000,
      "maxAttempts": 2,
      "linearIncrement": 500
    },
    "logging": {
      "errorRetentionHours": 12,
      "trendAnalysisWindowHours": 1,
      "aggregationWindowMinutes": 3
    }
  }
}
