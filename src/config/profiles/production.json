{
  "version": "1.0.0",
  "profile": "production",
  "indexing": {
    "maxFileSize": 10485760,
    "maxWorkers": 4,
    "batchSize": 100,
    "debounceMs": 300,
    "batchWindowMs": 1000,
    "followSymlinks": false,
    "maxDepth": 8,
    "incremental": true
  },
  "search": {
    "defaultLimit": 20,
    "maxLimit": 100,
    "fuzzySearch": true,
    "fuzzyThreshold": 0.8,
    "enableRegex": false,
    "timeoutMs": 5000,
    "scoringWeights": {
      "filename": 5.0,
      "path": 3.0,
      "definitions": 3.0,
      "imports": 2.0,
      "documentation": 1.0,
      "content": 1.5
    }
  },
  "database": {
    "path": "./.code-sout/database.db",
    "type": "sqlite",
    "maxConnections": 10,
    "connectionTimeout": 30000,
    "enableWAL": true,
    "vacuumIntervalHours": 168
  },
  "watching": {
    "enabled": false,
    "ignorePatterns": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "__pycache__",
      "*.pyc",
      ".code-scout",
      "*.log",
      "coverage",
      ".nyc_output",
      "tmp",
      "temp"
    ],
    "includePatterns": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.py"
    ],
    "pollingInterval": 0,
    "recursive": true,
    "debounceMs": 1000
  },
  "languages": {
    "typescript": {
      "extensions": [".ts", ".tsx"],
      "parser": "TypeScriptParser",
      "enabled": true,
      "config": {
        "strict": true,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false
      }
    },
    "javascript": {
      "extensions": [".js", ".jsx"],
      "parser": "JavaScriptParser",
      "enabled": true,
      "config": {
        "esversion": 2022,
        "sourceType": "module"
      }
    },
    "python": {
      "extensions": [".py"],
      "parser": "PythonParser",
      "enabled": true,
      "config": {
        "version": 3,
        "parseDocstrings": false
      }
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "file": {
      "enabled": true,
      "path": "./.code-scout/logs/production.log",
      "maxSize": "100MB",
      "maxFiles": 10
    },
    "console": {
      "enabled": false,
      "colorize": false
    },
    "structured": true
  },
  "security": {
    "allowedExtensions": [".ts", ".tsx", ".js", ".jsx", ".py", ".json"],
    "blockedPatterns": [
      "**/*.pem",
      "**/*.key",
      "**/*.p12",
      "**/.env*",
      "**/secrets/**",
      "**/private/**",
      "**/.ssh/**",
      "**/config/**",
      "**/*.conf",
      "**/*.cfg"
    ],
    "maxPathLength": 512,
    "enableSandbox": true,
    "sandbox": {
      "timeoutMs": 10000,
      "memoryLimitMB": 256,
      "allowNetworkAccess": false
    }
  },
  "errorHandling": {
    "retryDelays": {
      "immediate": 0,
      "short": 1000,
      "medium": 2000,
      "long": 5000,
      "extended": 10000,
      "maximum": 60000
    },
    "timeouts": {
      "database": 30000,
      "parsing": 10000,
      "network": 5000,
      "filesystem": 5000,
      "indexing": 300000,
      "query": 30000,
      "connection": 10000,
      "read": 30000,
      "write": 30000,
      "lock": 5000,
      "default": 10000
    },
    "circuitBreaker": {
      "failureThreshold": 5,
      "recoveryTimeout": 60000,
      "monitoringPeriod": 300000,
      "successThreshold": 3,
      "timeout": 30000
    },
    "degradation": {
      "errorRateThreshold": 0.05,
      "responseTimeThreshold": 2000,
      "memoryUsageThreshold": 0.75,
      "cpuUsageThreshold": 0.8,
      "monitoringInterval": 30000
    },
    "aggregation": {
      "windowMs": 300000,
      "cleanupIntervalMs": 3600000,
      "maxErrorEntries": 10000
    },
    "performance": {
      "slowQueryThresholdMs": 1000,
      "verySlowQueryThresholdMs": 5000,
      "connectionAcquisitionThresholdMs": 1000,
      "memoryUsageBytes": 1073741824,
      "poolUtilizationThreshold": 0.8
    },
    "resource": {
      "maxAgeMs": 1800000,
      "idleTimeoutMs": 300000,
      "cleanupIntervalMs": 60000,
      "leakThresholdAgeMs": 900000
    },
    "retryHandler": {
      "baseDelay": 1000,
      "maxDelay": 30000,
      "maxAttempts": 3,
      "linearIncrement": 1000
    },
    "logging": {
      "errorRetentionHours": 48,
      "trendAnalysisWindowHours": 4,
      "aggregationWindowMinutes": 5
    }
  }
}
