{
  "version": "1.0.0",
  "profile": "cicd",
  "indexing": {
    "maxFileSize": 5242880,
    "maxWorkers": 2,
    "batchSize": 200,
    "debounceMs": 100,
    "batchWindowMs": 500,
    "followSymlinks": false,
    "maxDepth": 6,
    "incremental": false
  },
  "search": {
    "defaultLimit": 10,
    "maxLimit": 50,
    "fuzzySearch": false,
    "fuzzyThreshold": 0.9,
    "enableRegex": false,
    "timeoutMs": 3000,
    "scoringWeights": {
      "filename": 6.0,
      "path": 4.0,
      "definitions": 5.0,
      "imports": 3.0,
      "documentation": 2.0,
      "content": 1.0
    }
  },
  "database": {
    "path": "./.code-scout/ci-database.db",
    "type": "sqlite",
    "maxConnections": 3,
    "connectionTimeout": 5000,
    "enableWAL": false,
    "vacuumIntervalHours": 1
  },
  "watching": {
    "enabled": false,
    "ignorePatterns": [
      "node_modules",
      ".git",
      "dist",
      "build",
      "__pycache__",
      "*.pyc",
      ".code-scout",
      "*.log",
      "coverage",
      ".nyc_output",
      "tmp",
      "temp",
      ".pytest_cache",
      ".mypy_cache",
      ".tox"
    ],
    "includePatterns": [
      "src/**/*.{ts,tsx,js,jsx,py}",
      "lib/**/*.{ts,tsx,js,jsx,py}"
    ],
    "pollingInterval": 0,
    "recursive": true,
    "debounceMs": 100
  },
  "languages": {
    "typescript": {
      "extensions": [".ts", ".tsx"],
      "parser": "TypeScriptParser",
      "enabled": true,
      "config": {
        "strict": true,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false
      }
    },
    "javascript": {
      "extensions": [".js", ".jsx"],
      "parser": "JavaScriptParser",
      "enabled": true,
      "config": {
        "esversion": 2022,
        "sourceType": "module"
      }
    },
    "python": {
      "extensions": [".py"],
      "parser": "PythonParser",
      "enabled": true,
      "config": {
        "version": 3,
        "parseDocstrings": false
      }
    }
  },
  "logging": {
    "level": "warn",
    "format": "json",
    "file": {
      "enabled": true,
      "path": "./.code-scout/logs/ci.log",
      "maxSize": "10MB",
      "maxFiles": 3
    },
    "console": {
      "enabled": true,
      "colorize": false
    },
    "structured": true
  },
  "security": {
    "allowedExtensions": [".ts", ".tsx", ".js", ".jsx", ".py"],
    "blockedPatterns": [
      "**/*.pem",
      "**/*.key",
      "**/*.p12",
      "**/.env*",
      "**/secrets/**",
      "**/private/**",
      "**/.ssh/**",
      "**/config/**",
      "**/*.conf",
      "**/*.cfg",
      "**/test/**",
      "**/tests/**",
      "**/__tests__/**",
      "**/*.test.*",
      "**/*.spec.*"
    ],
    "maxPathLength": 256,
    "enableSandbox": true,
    "sandbox": {
      "timeoutMs": 5000,
      "memoryLimitMB": 128,
      "allowNetworkAccess": false
    }
  },
  "errorHandling": {
    "retryDelays": {
      "immediate": 0,
      "short": 2000,
      "medium": 5000,
      "long": 10000,
      "extended": 20000,
      "maximum": 120000
    },
    "timeouts": {
      "database": 10000,
      "parsing": 5000,
      "network": 2000,
      "filesystem": 2000,
      "indexing": 120000,
      "query": 5000,
      "connection": 3000,
      "read": 10000,
      "write": 10000,
      "lock": 2000,
      "default": 5000
    },
    "circuitBreaker": {
      "failureThreshold": 2,
      "recoveryTimeout": 15000,
      "monitoringPeriod": 120000,
      "successThreshold": 1,
      "timeout": 10000
    },
    "degradation": {
      "errorRateThreshold": 0.2,
      "responseTimeThreshold": 1500,
      "memoryUsageThreshold": 0.9,
      "cpuUsageThreshold": 0.95,
      "monitoringInterval": 10000
    },
    "aggregation": {
      "windowMs": 120000,
      "cleanupIntervalMs": 1800000,
      "maxErrorEntries": 2000
    },
    "performance": {
      "slowQueryThresholdMs": 200,
      "verySlowQueryThresholdMs": 1000,
      "connectionAcquisitionThresholdMs": 200,
      "memoryUsageBytes": 134217728,
      "poolUtilizationThreshold": 0.9
    },
    "resource": {
      "maxAgeMs": 600000,
      "idleTimeoutMs": 60000,
      "cleanupIntervalMs": 30000,
      "leakThresholdAgeMs": 300000
    },
    "retryHandler": {
      "baseDelay": 2000,
      "maxDelay": 15000,
      "maxAttempts": 1,
      "linearIncrement": 2000
    },
    "logging": {
      "errorRetentionHours": 6,
      "trendAnalysisWindowHours": 0.5,
      "aggregationWindowMinutes": 2
    }
  }
}
